@model PrivateChatViewModel

@{
    ViewData["Title"] = "Messages";
    var controllerName = ViewContext.RouteData.Values["controller"].ToString();
}

<div class="container-fluid mt-4">
    <div class="row h-100">
        <!-- Messages List Sidebar -->
        <div class="col-md-4 mb-3 mb-md-0">
            <div class="card" style="height: 600px; overflow-y: auto;">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="bi bi-chat-left-dots"></i> Messages
                    </h5>
                    <a href="@Url.Action("AllChats", controllerName)" class="btn btn-sm btn-light">
                        <i class="bi bi-arrow-left"></i> Back
                    </a>
                </div>
                <div class="list-group list-group-flush">
                    @if (Model?.Messages?.Count > 0)
                    {
                        var conversations = Model.Messages
                        .GroupBy(m => m.SenderId == User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value
                        ? m.ReceiverId
                        : m.SenderId)
                        .Select(g => new
                        {
                            UserId = g.Key,
                            LastMessage = g.OrderByDescending(m => m.CreatedAt).First(),
                            UnreadCount = g.Count(m => !m.IsRead && m.ReceiverId == User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value)
                        })
                        .OrderByDescending(c => c.LastMessage.CreatedAt);

                        @foreach (var conv in conversations)
                        {
                            <a href="@Url.Action("PrivateChat", controllerName, new { userId = conv.UserId })"
                               class="list-group-item list-group-item-action">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="flex-grow-1">
                                        <h6 class="mb-1">
                                            @(conv.LastMessage.SenderId == User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value
                                                                                ? conv.LastMessage.ReceiverName
                                                                                : conv.LastMessage.SenderName)
                                        </h6>
                                        <p class="mb-0 text-muted small text-truncate">
                                            @conv.LastMessage.MessageContent
                                        </p>
                                    </div>
                                    <div class="text-end">
                                        <small class="text-muted d-block">
                                            @conv.LastMessage.CreatedAt.ToString("MMM dd, hh:mm tt")
                                        </small>
                                        @if (conv.UnreadCount > 0)
                                        {
                                            <span class="badge bg-danger">@conv.UnreadCount</span>
                                        }
                                    </div>
                                </div>
                            </a>
                        }
                    }
                    else
                    {
                        <div class="text-center p-3 text-muted">
                            <p><i class="bi bi-inbox"></i></p>
                            <p>No messages yet</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Chat Area -->
        <div class="col-md-8">
            @if (Model?.OtherUserId != null)
            {
                <div class="card" style="height: 600px; display: flex; flex-direction: column;">
                    <!-- Chat Header -->
                    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="mb-0">@Model.OtherUserName</h5>
                            <small>@Model.OtherUserRole</small>
                        </div>
                        <div>
                            <a href="@Url.Action("AllChats", controllerName)" class="btn btn-sm btn-light">
                                <i class="bi bi-x-circle"></i> Close
                            </a>
                        </div>
                    </div>

                    <!-- Messages Display Area -->
                    <div class="card-body flex-grow-1" style="overflow-y: auto; background-color: #f8f9fa;">
                        @if (Model?.Messages?.Count > 0)
                        {
                            @foreach (var message in Model.Messages.OrderBy(m => m.CreatedAt))
                            {
                                var isSentByMe = message.SenderId == User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
                                <div class="d-flex mb-3 @(isSentByMe ? "justify-content-end" : "justify-content-start")">
                                    <div class="@(isSentByMe ? "bg-primary text-white" : "bg-light border") p-3 rounded"
                                         style="max-width: 70%; word-wrap: break-word;">
                                        <p class="mb-1">@message.MessageContent</p>
                                        <small class="@(isSentByMe ? "text-white-50" : "text-muted")">
                                            @message.CreatedAt.ToString("MMM dd, hh:mm tt")
                                        </small>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="text-center text-muted mt-5">
                                <p><i class="bi bi-chat-dots" style="font-size: 3rem;"></i></p>
                                <p>Start a conversation</p>
                            </div>
                        }
                    </div>

                    <!-- Message Input Area -->
                    <div class="card-footer border-top">
                        <form asp-action="SendPrivateMessage" asp-controller="@controllerName" method="post" class="d-flex gap-2">
                            <input type="hidden" name="receiverId" value="@Model.OtherUserId" />
                            <input type="text" name="messageContent" class="form-control"
                                   placeholder="Type your message..." required maxlength="1000" />
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-send-fill"></i> Send
                            </button>
                        </form>
                    </div>
                </div>
            }
            else
            {
                <div class="card" style="height: 600px;">
                    <div class="card-body d-flex align-items-center justify-content-center">
                        <div class="text-center text-muted">
                            <p><i class="bi bi-chat-dots" style="font-size: 4rem;"></i></p>
                            <h5>Select a conversation</h5>
                            <p>or start a new one</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .list-group-item:hover {
        background-color: #f1f3f5;
    }

    .list-group-item.active {
        background-color: #0d6efd;
    }

    .card {
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }
</style>
