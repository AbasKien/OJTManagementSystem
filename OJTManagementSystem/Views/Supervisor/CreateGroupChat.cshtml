@model OJTManagementSystem.ViewModel.CreateGroupChatViewModel

@{
    ViewData["Title"] = "Create Group Chat";
}

<div class="container mt-4">
    <h2>Create New Group Chat</h2>

    <form asp-action="CreateGroupChat" method="post">
        <div class="form-group">
            <label asp-for="GroupName"></label>
            <input asp-for="GroupName" class="form-control" />
            <span asp-validation-for="GroupName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Create Group Chat</button>
        <a asp-action="AllChats" class="btn btn-secondary">Cancel</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}