@model AllChatsViewModel
@{
    ViewData["Title"] = "Messages"; var ctrl = ViewContext.RouteData.Values["controller"].ToString();
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show"><i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]<button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <p class="text-muted mb-0">Your private and group conversations.</p>
    
</div>

<h6 class="text-muted text-uppercase small fw-semibold mb-2"><i class="fas fa-users me-1"></i>Group Chats (@(Model?.GroupChats?.Count ?? 0))</h6>
@if (Model?.GroupChats?.Count > 0)
{
    <div class="row g-3 mb-4">
        @foreach (var g in Model.GroupChats.OrderByDescending(x => x.CreatedAt))
        {
            <div class="col-md-6 col-lg-4">
                <a href="@Url.Action("GroupChat", ctrl, new { groupChatId = g.GroupChatId })" class="card text-decoration-none text-dark h-100 hover-card">
                    <div class="card-body">
                        <h6 class="fw-bold mb-1"><i class="fas fa-users me-2 text-primary"></i>@g.GroupName</h6>
                        @if (!string.IsNullOrEmpty(g.Description))
                        {
                            <p class="text-muted small mb-2">@(g.Description.Length > 80 ? g.Description[..80] + "..." : g.Description)</p>
                        }
                        <div class="d-flex justify-content-between mt-2">
                            <small class="text-muted"><i class="fas fa-user me-1"></i>@g.MemberCount members</small>
                            <small class="text-muted"><i class="fas fa-comment me-1"></i>@g.MessageCount msgs</small>
                        </div>
                    </div>
                    <div class="card-footer bg-light border-top"><small class="text-muted">Created @g.CreatedAt.ToString("MMM dd, yyyy")</small></div>
                </a>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info mb-4"><i class="fas fa-info-circle me-2"></i>No group chats yet. <a href="@Url.Action("CreateGroupChat", ctrl)" class="alert-link">Create one!</a></div>
}

<h6 class="text-muted text-uppercase small fw-semibold mb-2"><i class="fas fa-comment me-1"></i>Private Chats</h6>
@if (Model?.PrivateChats?.Count > 0)
{
    <div class="card">
        <div class="list-group list-group-flush">
            @foreach (var p in Model.PrivateChats)
            {
                <a href="@Url.Action("PrivateChat", ctrl, new { userId = p.OtherUserId })" class="list-group-item list-group-item-action">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-0 fw-semibold">@p.OtherUserName</h6>
                            <small class="text-muted">@p.OtherUserRole · @p.Messages.Count message(s)</small>
                        </div>
                        <i class="fas fa-chevron-right text-muted"></i>
                    </div>
                </a>
            }
        </div>
    </div>
}
else
{
    <div class="alert alert-info"><i class="fas fa-info-circle me-2"></i>No private chats yet. Start messaging your supervisor!</div>
}

<style>
    .hover-card {
        transition: transform .2s,box-shadow .2s
    }

        .hover-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 4px 16px rgba(0,0,0,.12) !important
        }</style>
