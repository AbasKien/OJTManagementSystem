@model List<DailyTimeRecordViewModel>
@{
    ViewData["Title"] = "My DTRs";
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show"><i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]<button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show"><i class="fas fa-check-circle me-2"></i>@TempData["Success"]<button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <p class="text-muted mb-0">All your submitted daily time records.</p>
    <a asp-controller="Intern" asp-action="SubmitDtr" class="btn btn-primary btn-sm"><i class="fas fa-plus me-1"></i>Submit New DTR</a>
</div>

@if (Model != null && Model.Count > 0)
{
    <div class="card">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead><tr><th>Date</th><th>Time In</th><th>Time Out</th><th>Total Hours</th><th>Activity</th><th>Status</th><th>Notes</th></tr></thead>
                    <tbody>
                        @foreach (var dtr in Model)
                        {
                            <tr>
                                <td>@dtr.RecordDate.ToString("MMM dd, yyyy")</td>
                                <td>@dtr.TimeIn.ToString(@"hh\:mm")</td>
                                <td>@dtr.TimeOut.ToString(@"hh\:mm")</td>
                                <td><strong>@dtr.TotalHours.ToString("F2") hrs</strong></td>
                                <td class="text-truncate" style="max-width:180px">@dtr.ActivityDescription</td>
                                <td>
                                    @{
                                        var s = dtr.Status.ToString();
                                    }
                                    @if (s == "Approved")
                                    {
                                        <span class="badge bg-success">@s</span>
                                    }
                                    else if (s == "Pending")
                                    {

                                        <span class="badge bg-warning text-dark">@s</span>
                                    }
                                    else
                                    {

                                        <span class="badge bg-danger">@s</span>
                                    }
                                </td>
                                <td>@if (s=="Rejected"){
                                <small class="text-danger">@dtr.RejectionReason</small>
                            }else
                            {

                                <span class="text-muted">—</span>
                            }
    </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
} else
{
    <div class="alert alert-info"><i class="fas fa-info-circle me-2"></i>No DTRs submitted yet. <a asp-controller="Intern" asp-action="SubmitDtr" class="alert-link">Submit one now.</a></div>
}
