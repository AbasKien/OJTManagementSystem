@model List<LeaveRequestViewModel>
@{
    ViewData["Title"] = "My Leave Requests";
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show"><i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]<button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <p class="text-muted mb-0">All your submitted leave requests.</p>
    <a asp-controller="Intern" asp-action="RequestLeave" class="btn btn-primary btn-sm"><i class="fas fa-plus me-1"></i>New Leave Request</a>
</div>

@if (Model != null && Model.Count > 0)
{
    <div class="card">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead><tr><th>From</th><th>To</th><th>Type</th><th>Days</th><th>Reason</th><th>Status</th><th>Notes</th></tr></thead>
                    <tbody>
                        @foreach (var leave in Model)
                        {
                            <tr>
                                <td>@leave.StartDate.ToString("MMM dd, yyyy")</td>
                                <td>@leave.EndDate.ToString("MMM dd, yyyy")</td>
                                <td>@leave.LeaveType</td>
                                <td>@leave.NumberOfDays</td>
                                <td class="text-truncate" style="max-width:160px">@leave.Reason</td>
                                <td>
                                    @{
                                        var s = leave.Status.ToString();
                                    }
                                    @if (s == "Approved")
                                    {
                                        <span class="badge bg-success">@s</span>
                                    }
                                    else if (s == "Pending")
                                    {

                                        <span class="badge bg-warning text-dark">@s</span>
                                    }
                                    else
                                    {

                                        <span class="badge bg-danger">@s</span>
                                    }
                                </td>
                                <td>@if (s=="Rejected"){
                                <small class="text-danger">@leave.RejectionReason</small>
                            }else
                            {

                                <span class="text-muted">—</span>
                            }
    </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
} else
{
    <div class="alert alert-info"><i class="fas fa-info-circle me-2"></i>No leave requests yet. <a asp-controller="Intern" asp-action="RequestLeave" class="alert-link">Submit one now.</a></div>
}
