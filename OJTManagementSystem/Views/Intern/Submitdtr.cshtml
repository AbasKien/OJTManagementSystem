@model SubmitDtrViewModel
@{
    ViewData["Title"] = "Submit DTR";
}

<div class="row justify-content-center">
    <div class="col-md-7">
        <div class="card">
            <div class="card-header"><h5 class="mb-0"><i class="fas fa-clock me-2"></i>Submit Daily Time Record</h5></div>
            <div class="card-body">
                <form method="post" asp-action="SubmitDtr">
                    <div asp-validation-summary="All" class="alert alert-danger"></div>
                    <div class="mb-3">
                        <label asp-for="RecordDate" class="form-label fw-semibold">Date</label>
                        <input asp-for="RecordDate" type="date" class="form-control" />
                        <span asp-validation-for="RecordDate" class="text-danger small"></span>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="TimeIn" class="form-label fw-semibold">Time In</label>
                            <input asp-for="TimeIn" type="time" class="form-control" />
                            <span asp-validation-for="TimeIn" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="TimeOut" class="form-label fw-semibold">Time Out</label>
                            <input asp-for="TimeOut" type="time" class="form-control" />
                            <span asp-validation-for="TimeOut" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="mb-4">
                        <label asp-for="ActivityDescription" class="form-label fw-semibold">Activity Description</label>
                        <textarea asp-for="ActivityDescription" class="form-control" rows="4" placeholder="Describe your activities during this work day..."></textarea>
                        <span asp-validation-for="ActivityDescription" class="text-danger small"></span>
                    </div>
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary"><i class="fas fa-paper-plane me-2"></i>Submit DTR</button>
                        <a asp-controller="Intern" asp-action="Dashboard" class="btn btn-outline-secondary"><i class="fas fa-times me-1"></i>Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}
