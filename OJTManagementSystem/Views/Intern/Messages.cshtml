@model PrivateChatViewModel
@{
    ViewData["Title"] = "Chat"; var ctrl = ViewContext.RouteData.Values["controller"].ToString();
}

<div class="row g-3" style="height:calc(100vh - 140px)">
    <!-- Sidebar -->
    <div class="col-md-4">
        <div class="card h-100" style="overflow:hidden;display:flex;flex-direction:column">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span><i class="fas fa-comments me-2"></i>Conversations</span>
                <a href="@Url.Action("AllChats", ctrl)" class="btn btn-sm btn-outline-light"><i class="fas fa-arrow-left"></i></a>
            </div>
            <div class="list-group list-group-flush flex-grow-1" style="overflow-y:auto">
                @if (Model?.Messages?.Count > 0)
                {
                    var myId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
                    var convs = Model.Messages
                    .GroupBy(m => m.SenderId == myId ? m.ReceiverId : m.SenderId)
                    .Select(g => new { UserId = g.Key, Last = g.OrderByDescending(m => m.CreatedAt).First() })
                    .OrderByDescending(c => c.Last.CreatedAt);
                    @foreach (var c in convs)
                    {
                        <a href="@Url.Action("PrivateChat", ctrl, new { userId = c.UserId })" class="list-group-item list-group-item-action">
                            <h6 class="mb-0 fw-semibold">@(c.Last.SenderId == myId ? c.Last.ReceiverName : c.Last.SenderName)</h6>
                            <p class="mb-0 text-muted small text-truncate">@c.Last.MessageContent</p>
                            <small class="text-muted">@c.Last.CreatedAt.ToString("MMM dd, hh:mm tt")</small>
                        </a>
                    }
                }
                else
                {
                    <div class="text-center p-4 text-muted"><i class="fas fa-inbox fa-2x mb-2"></i><p>No messages</p></div>
                }
            </div>
        </div>
    </div>

    <!-- Chat area -->
    <div class="col-md-8">
        @if (Model?.OtherUserId != null)
        {
            <div class="card h-100" style="display:flex;flex-direction:column">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div><strong>@Model.OtherUserName</strong><small class="text-white-50 ms-2">@Model.OtherUserRole</small></div>
                    <a href="@Url.Action("AllChats", ctrl)" class="btn btn-sm btn-outline-light"><i class="fas fa-times"></i></a>
                </div>
                <div class="card-body flex-grow-1 p-3" style="overflow-y:auto;background:#f8f9fa" id="msgArea">
                    @if (Model?.Messages?.Count > 0)
                    {
                        var myId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
                        @foreach (var m in Model.Messages.OrderBy(x => x.CreatedAt))
                        {
                            var mine = m.SenderId == myId;
                            <div class="d-flex mb-2 @(mine ? "justify-content-end" : "justify-content-start")">
                                <div class="@(mine ? "bg-primary text-white" : "bg-white border") p-2 rounded" style="max-width:70%;word-wrap:break-word">
                                    <p class="mb-1 small">@m.MessageContent</p>
                                    <small class="@(mine ? "text-white-50" : "text-muted")">@m.CreatedAt.ToString("hh:mm tt")</small>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center text-muted mt-5"><i class="fas fa-comments fa-3x mb-2"></i><p>Start the conversation</p></div>
                    }
                </div>
                <div class="card-footer">
                    <form asp-action="SendPrivateMessage" asp-controller="@ctrl" method="post" class="d-flex gap-2">
                        <input type="hidden" name="receiverId" value="@Model.OtherUserId" />
                        <input type="text" name="messageContent" class="form-control" placeholder="Type a message..." required maxlength="1000" />
                        <button type="submit" class="btn btn-primary"><i class="fas fa-paper-plane"></i></button>
                    </form>
                </div>
            </div>
        }
        else
        {
            <div class="card h-100 d-flex align-items-center justify-content-center">
                <div class="text-center text-muted"><i class="fas fa-comments fa-4x mb-3"></i><h5>Select a conversation</h5></div>
            </div>
        }
    </div>
</div>
<script>window.addEventListener('load',()=>{var a=document.getElementById('msgArea');if(a)a.scrollTop=a.scrollHeight})</script>
