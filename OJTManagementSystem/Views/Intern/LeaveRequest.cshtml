@model OJTManagementSystem.ViewModel.LeaveRequestViewModel
@{
    ViewData["Title"] = "Request Leave";
}

<div class="row justify-content-center">
    <div class="col-lg-8 col-md-10">

        <!-- PAGE HEADER -->
        <div class="mb-4">
            <h2 class="fw-semibold mb-1">
                <i class="bi bi-calendar-x text-primary me-1"></i>
                Request Leave / Absence
            </h2>
            <p class="text-muted mb-0">
                Submit a leave request for supervisor review and approval.
            </p>
        </div>

        <!-- FORM CARD -->
        <div class="card shadow-lg border-0">
            <div class="card-body p-4">

                <form asp-action="LeaveRequest" method="post">

                    <!-- DATE RANGE -->
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="StartDate" class="form-label fw-semibold"></label>
                            <input asp-for="StartDate"
                                   class="form-control"
                                   type="date" />
                            <span asp-validation-for="StartDate"
                                  class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="EndDate" class="form-label fw-semibold"></label>
                            <input asp-for="EndDate"
                                   class="form-control"
                                   type="date" />
                            <span asp-validation-for="EndDate"
                                  class="text-danger small"></span>
                        </div>
                    </div>

                    <!-- LEAVE TYPE -->
                    <div class="mb-3">
                        <label asp-for="LeaveType" class="form-label fw-semibold"></label>
                        <select asp-for="LeaveType"
                                class="form-select">
                            <option value="">-- Select Leave Type --</option>
                            <option value="Sick Leave">Sick Leave</option>
                            <option value="Emergency Leave">Emergency Leave</option>
                            <option value="Personal Leave">Personal Leave</option>
                            <option value="Other">Other</option>
                        </select>
                        <span asp-validation-for="LeaveType"
                              class="text-danger small"></span>
                    </div>

                    <!-- REASON -->
                    <div class="mb-4">
                        <label asp-for="Reason" class="form-label fw-semibold"></label>
                        <textarea asp-for="Reason"
                                  class="form-control"
                                  rows="5"
                                  placeholder="Briefly explain the reason for your leave request"></textarea>
                        <span asp-validation-for="Reason"
                              class="text-danger small"></span>
                    </div>

                    <!-- ACTION BUTTONS -->
                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="LeaveRequests"
                           class="btn btn-outline-secondary px-4">
                            Cancel
                        </a>

                        <button type="submit"
                                class="btn btn-primary px-4">
                            <i class="bi bi-send-check me-1"></i>
                            Submit Request
                        </button>
                    </div>

                </form>

            </div>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
