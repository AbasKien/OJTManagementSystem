@model RegisterViewModel

@{
    ViewData["Title"] = "Register as Intern";
    bool registrationDone = TempData["RegistrationSuccess"] != null && (bool)TempData["RegistrationSuccess"] == true;
    string registeredEmail = TempData["RegisteredEmail"]?.ToString() ?? "";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-7">

        @if (registrationDone)
        {
            @* ✅ Email Verification Pending Screen *@
            <div class="card shadow-lg border-0 text-center">
                <div class="card-header header-pending text-white py-4">
                    <div class="icon-circle mx-auto mb-3">
                        <i class="fas fa-envelope fa-2x"></i>
                    </div>
                    <h3 class="mb-0">Check Your Email</h3>
                </div>
                <div class="card-body p-5">
                    <div class="check-badge mx-auto mb-4">
                        <i class="fas fa-paper-plane fa-2x text-warning"></i>
                    </div>
                    <h5 class="fw-bold mb-3">Almost there! Verify your email to activate your account.</h5>
                    <p class="text-muted mb-2">
                        We've sent a confirmation link to:
                    </p>
                    <div class="email-badge mb-4">
                        <i class="fas fa-envelope-open me-2"></i>
                        <strong>@registeredEmail</strong>
                    </div>
                    <div class="steps-box text-start mb-4">
                        <p class="fw-bold mb-2 small text-muted text-uppercase">Next Steps:</p>
                        <div class="step-item">
                            <span class="step-num">1</span>
                            <span>Open the email we sent you</span>
                        </div>
                        <div class="step-item">
                            <span class="step-num">2</span>
                            <span>Click the <strong>"Confirm Email"</strong> link</span>
                        </div>
                        <div class="step-item">
                            <span class="step-num">3</span>
                            <span>Log in to your new account</span>
                        </div>
                    </div>
                    <div class="alert alert-warning small mb-4" role="alert">
                        <i class="fas fa-clock me-1"></i>
                        <strong>Didn't receive the email?</strong> Check your spam folder. The link expires in <strong>24 hours</strong>.
                    </div>
                    <div class="d-grid gap-2">
                        <form method="post" asp-action="ResendConfirmationEmail" asp-controller="Account">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="email" value="@registeredEmail" />
                            <button type="submit" class="btn btn-outline-warning w-100">
                                <i class="fas fa-redo me-1"></i> Resend Confirmation Email
                            </button>
                        </form>
                        <a href="/Account/Login" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-1"></i> Back to Login
                        </a>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="card shadow-lg border-0">
                <div class="card-header bg-success text-white py-4">
                    <h2 class="mb-0">
                        <i class="fas fa-user-graduate"></i> Register as Intern
                    </h2>
                    <p class="mb-0 mt-2" style="font-size: 0.95rem; opacity: 0.9;">Create your internship account</p>
                </div>

                <div class="card-body p-4">
                    <form method="post" asp-action="RegisterIntern" novalidate>
                        <input type="hidden" asp-for="Role" value="Intern" />

                        <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

                        <!-- Personal Information Section -->
                        <h5 class="mb-3 text-primary">
                            <i class="fas fa-info-circle"></i> Personal Information
                        </h5>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="FirstName" class="form-label fw-bold">First Name</label>
                                <input asp-for="FirstName" class="form-control" placeholder="John">
                                <span asp-validation-for="FirstName" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="LastName" class="form-label fw-bold">Last Name</label>
                                <input asp-for="LastName" class="form-control" placeholder="Doe">
                                <span asp-validation-for="LastName" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-bold">Email Address</label>
                            <input asp-for="Email" class="form-control" placeholder="john.doe@email.com" type="email">
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="form-label fw-bold">Phone Number</label>
                            <input asp-for="PhoneNumber" class="form-control" placeholder="+1 (555) 000-0000" type="tel">
                            <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                        </div>

                        <!-- Internship Details Section -->
                        <hr class="my-4">
                        <h5 class="mb-3 text-primary">
                            <i class="fas fa-briefcase"></i> Internship Details
                        </h5>

                        <div class="mb-3">
                            <label asp-for="StudentId" class="form-label fw-bold">Student ID</label>
                            <input asp-for="StudentId" class="form-control" placeholder="e.g., 2023-1234">
                            <span asp-validation-for="StudentId" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="School" class="form-label fw-bold">School / University</label>
                            <input asp-for="School" class="form-control" placeholder="e.g., ABC University">
                            <span asp-validation-for="School" class="text-danger small"></span>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Course" class="form-label fw-bold">Course / Program</label>
                                <input asp-for="Course" class="form-control" placeholder="e.g., Computer Science">
                                <span asp-validation-for="Course" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Department" class="form-label fw-bold">Department</label>
                                <input asp-for="Department" class="form-control" placeholder="e.g., IT, HR, Finance">
                                <span asp-validation-for="Department" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="StartDate" class="form-label fw-bold">Start Date</label>
                                <input asp-for="StartDate" class="form-control" type="date">
                                <span asp-validation-for="StartDate" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="EndDate" class="form-label fw-bold">End Date</label>
                                <input asp-for="EndDate" class="form-control" type="date">
                                <span asp-validation-for="EndDate" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Account Credentials Section -->
                        <hr class="my-4">
                        <h5 class="mb-3 text-primary">
                            <i class="fas fa-lock"></i> Account Credentials
                        </h5>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Password" class="form-label fw-bold">Password</label>
                                <input asp-for="Password" class="form-control" placeholder="••••••••" type="password">
                                <small class="text-muted d-block mt-2">
                                    Min 8 characters. Include uppercase, lowercase, number, and special character.
                                </small>
                                <span asp-validation-for="Password" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ConfirmPassword" class="form-label fw-bold">Confirm Password</label>
                                <input asp-for="ConfirmPassword" class="form-control" placeholder="••••••••" type="password">
                                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Submit Button -->
                        <div class="d-grid gap-2 mb-3">
                            <button type="submit" class="btn btn-success btn-lg fw-bold">
                                <i class="fas fa-check"></i> Create Account
                            </button>
                        </div>

                        <div class="text-center">
                            <p class="mb-0">
                                Already have an account?
                                <a href="/Account/Login" class="fw-bold text-decoration-none">Login here</a>
                            </p>
                        </div>
                    </form>
                </div>

                <div class="card-footer bg-light border-top">
                    <div class="alert alert-info mb-0" role="alert">
                        <i class="fas fa-envelope-open-text me-1"></i>
                        <strong>Email Verification Required:</strong> After registering, you must confirm your email before you can log in.
                    </div>
                </div>
            </div>

            <div class="text-center mt-3">
                <p>
                    Are you a supervisor?
                    <a href="/Account/RegisterSupervisor" class="fw-bold text-decoration-none">Register as Supervisor</a>
                </p>
            </div>
        }
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .card {
        border-radius: 12px;
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .card-header {
        background: linear-gradient(135deg, #198754 0%, #155724 100%);
    }

    .header-pending {
        background: linear-gradient(135deg, #f59e0b 0%, #b45309 100%);
    }

    .icon-circle {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.2);
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .check-badge {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        background: #fef3c7;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .email-badge {
        display: inline-block;
        background: #eff6ff;
        border: 1px solid #bfdbfe;
        border-radius: 8px;
        padding: 10px 20px;
        color: #1e40af;
        font-size: 0.95rem;
    }

    .steps-box {
        background: #f8f9fa;
        border-radius: 10px;
        padding: 16px 20px;
    }

    .step-item {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 6px 0;
        font-size: 0.92rem;
    }

    .step-num {
        width: 26px;
        height: 26px;
        border-radius: 50%;
        background: #198754;
        color: #fff;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        font-size: 0.8rem;
        flex-shrink: 0;
    }

    .form-control:focus {
        border-color: #198754;
        box-shadow: 0 0 0 0.2rem rgba(25, 135, 84, 0.25);
    }

    .btn-success {
        background: linear-gradient(135deg, #198754 0%, #155724 100%);
        border: none;
    }

        .btn-success:hover {
            background: linear-gradient(135deg, #155724 0%, #0d3818 100%);
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(25, 135, 84, 0.4);
        }
</style>
