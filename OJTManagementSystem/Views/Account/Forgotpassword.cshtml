@{
    ViewData["Title"] = "Forgot Password";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-5">
        <div class="card shadow-lg border-0">
            <div class="card-header text-white py-4">
                <h3 class="mb-0">
                    <i class="fas fa-key"></i> Forgot Password
                </h3>
                <p class="mb-0 mt-2 small">Enter your email and we'll send you a reset link</p>
            </div>

            <div class="card-body p-4">

                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success" role="alert">
                        <i class="fas fa-check-circle me-2"></i>
                        <strong>Email Sent!</strong><br />
                        @TempData["SuccessMessage"]
                    </div>
                }
                else
                {
                    <p class="text-muted mb-4">
                        Enter the email address associated with your account and we'll send you a link to reset your password.
                    </p>

                    <form method="post" asp-action="ForgotPassword" asp-controller="Account" novalidate>
                        @Html.AntiForgeryToken()

                        <div class="mb-4">
                            <label for="email" class="form-label fw-bold">Email Address</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light">
                                    <i class="fas fa-envelope text-muted"></i>
                                </span>
                                <input type="email" class="form-control" id="email" name="email"
                                       placeholder="Enter your registered email" required />
                            </div>
                            <span class="text-danger small" id="emailError"></span>
                        </div>

                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-reset fw-bold">
                                <i class="fas fa-paper-plane me-2"></i> Send Reset Link
                            </button>
                        </div>

                        <div class="text-center">
                            <a href="/Account/Login" class="back-link">
                                <i class="fas fa-arrow-left me-1"></i> Back to Login
                            </a>
                        </div>
                    </form>
                }

            </div>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="text-center mt-3">
                <a href="/Account/Login" class="btn btn-outline-primary btn-sm">
                    <i class="fas fa-sign-in-alt me-1"></i> Back to Login
                </a>
            </div>
        }
    </div>
</div>

<style>
    .card {
        border-radius: 12px;
        overflow: hidden;
    }

    .card-header {
        background: linear-gradient(135deg, #6f42c1 0%, #563d7c 100%);
    }

    .form-control:focus {
        border-color: #6f42c1;
        box-shadow: 0 0 0 0.2rem rgba(111, 66, 193, 0.25);
    }

    .input-group-text {
        border-right: 0;
    }

    .input-group .form-control {
        border-left: 0;
    }

    .btn-reset {
        background: linear-gradient(135deg, #6f42c1 0%, #563d7c 100%);
        color: #fff;
        border: none;
        padding: 0.6rem;
        border-radius: 8px;
        transition: all 0.2s;
    }

        .btn-reset:hover {
            background: linear-gradient(135deg, #563d7c 0%, #432f60 100%);
            color: #fff;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(111, 66, 193, 0.4);
        }

    .back-link {
        font-size: 0.87rem;
        color: #6c757d;
        text-decoration: none;
    }

        .back-link:hover {
            color: #6f42c1;
            text-decoration: underline;
        }

    .alert-success {
        border-left: 4px solid #198754;
        background-color: #f0fff4;
        border-radius: 8px;
        color: #155724;
    }
</style>
