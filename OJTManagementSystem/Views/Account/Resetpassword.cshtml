@{
    ViewData["Title"] = "Reset Password";
    var token = Context.Request.Query["token"].ToString();
    var email = Context.Request.Query["email"].ToString();
}

<div class="row justify-content-center mt-5">
    <div class="col-md-5">
        <div class="card shadow-lg border-0">
            <div class="card-header text-white py-4">
                <h3 class="mb-0">
                    <i class="fas fa-lock-open"></i> Reset Password
                </h3>
                <p class="mb-0 mt-2 small">Create a new password for your account</p>
            </div>

            <div class="card-body p-4">

                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success" role="alert">
                        <i class="fas fa-check-circle me-2"></i>
                        <strong>Password Reset Successful!</strong><br />
                        @TempData["SuccessMessage"]
                    </div>
                    <div class="d-grid mt-3">
                        <a href="/Account/Login" class="btn btn-primary fw-bold">
                            <i class="fas fa-sign-in-alt me-1"></i> Go to Login
                        </a>
                    </div>
                }
                else if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger" role="alert">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        @TempData["ErrorMessage"]
                    </div>
                    <div class="text-center mt-3">
                        <a href="/Account/ForgotPassword" class="back-link">
                            <i class="fas fa-redo me-1"></i> Request a new reset link
                        </a>
                    </div>
                }
                else
                {
                    <form method="post" asp-action="ResetPassword" asp-controller="Account" novalidate>
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="token" value="@token" />
                        <input type="hidden" name="email" value="@email" />

                        <div class="mb-3">
                            <label class="form-label fw-bold">Email Address</label>
                            <input type="email" class="form-control bg-light" value="@email" readonly />
                        </div>

                        <div class="mb-3">
                            <label for="newPassword" class="form-label fw-bold">New Password</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light">
                                    <i class="fas fa-lock text-muted"></i>
                                </span>
                                <input type="password" class="form-control" id="newPassword" name="newPassword"
                                       placeholder="Min. 8 characters" required minlength="8" />
                                <button class="btn btn-outline-secondary" type="button" onclick="togglePassword('newPassword', this)">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                            <small class="text-muted">Must include uppercase, lowercase, number, and special character.</small>
                        </div>

                        <div class="mb-4">
                            <label for="confirmPassword" class="form-label fw-bold">Confirm New Password</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light">
                                    <i class="fas fa-lock text-muted"></i>
                                </span>
                                <input type="password" class="form-control" id="confirmPassword" name="confirmPassword"
                                       placeholder="Re-enter new password" required />
                                <button class="btn btn-outline-secondary" type="button" onclick="togglePassword('confirmPassword', this)">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                            <span class="text-danger small" id="matchError"></span>
                        </div>

                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-reset fw-bold" id="submitBtn">
                                <i class="fas fa-save me-2"></i> Reset Password
                            </button>
                        </div>

                        <div class="text-center">
                            <a href="/Account/Login" class="back-link">
                                <i class="fas fa-arrow-left me-1"></i> Back to Login
                            </a>
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function togglePassword(fieldId, btn) {
            const field = document.getElementById(fieldId);
            const icon = btn.querySelector('i');
            if (field.type === 'password') {
                field.type = 'text';
                icon.classList.replace('fa-eye', 'fa-eye-slash');
            } else {
                field.type = 'password';
                icon.classList.replace('fa-eye-slash', 'fa-eye');
            }
        }

        document.getElementById('confirmPassword')?.addEventListener('input', function () {
            const pw = document.getElementById('newPassword').value;
            const err = document.getElementById('matchError');
            if (this.value && this.value !== pw) {
                err.textContent = 'Passwords do not match.';
                document.getElementById('submitBtn').disabled = true;
            } else {
                err.textContent = '';
                document.getElementById('submitBtn').disabled = false;
            }
        });
    </script>
}

<style>
    .card {
        border-radius: 12px;
        overflow: hidden;
    }

    .card-header {
        background: linear-gradient(135deg, #6f42c1 0%, #563d7c 100%);
    }

    .form-control:focus {
        border-color: #6f42c1;
        box-shadow: 0 0 0 0.2rem rgba(111, 66, 193, 0.25);
    }

    .input-group-text {
        border-right: 0;
    }

    .input-group .form-control {
        border-left: 0;
    }

    .btn-reset {
        background: linear-gradient(135deg, #6f42c1 0%, #563d7c 100%);
        color: #fff;
        border: none;
        padding: 0.6rem;
        border-radius: 8px;
        transition: all 0.2s;
    }

        .btn-reset:hover {
            background: linear-gradient(135deg, #563d7c 0%, #432f60 100%);
            color: #fff;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(111, 66, 193, 0.4);
        }

    .back-link {
        font-size: 0.87rem;
        color: #6c757d;
        text-decoration: none;
    }

        .back-link:hover {
            color: #6f42c1;
            text-decoration: underline;
        }

    .alert-success {
        border-left: 4px solid #198754;
        background-color: #f0fff4;
        border-radius: 8px;
        color: #155724;
    }
</style>
