@using Microsoft.AspNetCore.Identity
@using OJTManagementSystem.Models
@using static OJTManagementSystem.Models.Account
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ExpenseTracker</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Archivo+Black&family=Work+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        /* Neo-Brutalist Financial Design System */
        :root {
            --primary: #FF6B35;
            --primary-dark: #E85D2F;
            --secondary: #004E89;
            --accent: #FFC857;
            --success: #00C49A;
            --danger: #FF1E56;
            --dark: #1A1A2E;
            --light: #FAFAFA;
            --border: #000000;
            --shadow: 8px 8px 0px rgba(0,0,0,1);
            --shadow-hover: 12px 12px 0px rgba(0,0,0,1);
            --shadow-sm: 4px 4px 0px rgba(0,0,0,1);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Work Sans', sans-serif;
            background: var(--light);
            color: var(--dark);
            line-height: 1.6;
            overflow-x: hidden;
        }

        /* Typography */
        h1, h2, h3, h4, h5, h6 {
            font-family: 'Archivo Black', sans-serif;
            text-transform: uppercase;
            letter-spacing: -0.5px;
            line-height: 1.2;
        }

        h1 {
            font-size: 2.5rem;
        }

        h2 {
            font-size: 2rem;
        }

        /* Header */
        header {
            background: var(--primary);
            border-bottom: 5px solid var(--border);
            position: sticky;
            top: 0;
            z-index: 1000;
            box-shadow: 0 4px 0 var(--border);
        }

        .navbar {
            padding: 1.5rem 0;
        }

        .navbar-brand {
            font-family: 'Archivo Black', sans-serif;
            font-size: 1.75rem;
            color: white !important;
            text-transform: uppercase;
            letter-spacing: -1px;
            padding: 0.5rem 1rem;
            background: var(--dark);
            border: 4px solid var(--border);
            box-shadow: var(--shadow-sm);
            transition: all 0.2s cubic-bezier(0.34, 1.56, 0.64, 1);
        }

            .navbar-brand:hover {
                transform: translate(-2px, -2px);
                box-shadow: 6px 6px 0px var(--border);
            }

        .nav-link {
            color: white !important;
            font-weight: 700;
            text-transform: uppercase;
            font-size: 0.95rem;
            padding: 0.75rem 1.5rem !important;
            margin: 0 0.25rem;
            border: 3px solid transparent;
            transition: all 0.2s ease;
            letter-spacing: 0.5px;
        }

            .nav-link:hover,
            .nav-link.active {
                background: white;
                color: var(--primary) !important;
                border: 3px solid var(--border);
                transform: translate(-2px, -2px);
                box-shadow: 4px 4px 0 var(--border);
            }

        /* Main Content */
        main {
            min-height: calc(100vh - 200px);
            padding: 3rem 0;
        }

        .container {
            max-width: 1200px;
        }

        /* Cards - Neo-Brutalist Style */
        .card {
            background: white;
            border: 5px solid var(--border);
            box-shadow: var(--shadow);
            transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
            overflow: visible;
            border-radius: 0 !important;
        }

            .card:hover {
                transform: translate(-4px, -4px);
                box-shadow: var(--shadow-hover);
            }

        .card-header {
            background: var(--secondary);
            color: white;
            border-bottom: 5px solid var(--border);
            padding: 1.5rem;
            font-family: 'Archivo Black', sans-serif;
            text-transform: uppercase;
            font-size: 1.25rem;
        }

        .card-body {
            padding: 2rem;
        }

        /* Special highlight card */
        .card.highlight {
            background: var(--accent);
            border-color: var(--border);
        }

            .card.highlight .card-body h5 {
                color: var(--dark);
            }

            .card.highlight h2 {
                color: var(--secondary);
                font-size: 3rem;
            }

        /* Buttons - Bold and Chunky */
        .btn {
            font-weight: 700;
            text-transform: uppercase;
            padding: 0.75rem 1.75rem;
            border: 4px solid var(--border);
            box-shadow: var(--shadow-sm);
            transition: all 0.2s cubic-bezier(0.34, 1.56, 0.64, 1);
            font-size: 0.95rem;
            letter-spacing: 0.5px;
            position: relative;
            border-radius: 0 !important;
        }

            .btn:hover {
                transform: translate(-2px, -2px);
                box-shadow: 6px 6px 0 var(--border);
            }

            .btn:active {
                transform: translate(2px, 2px);
                box-shadow: 2px 2px 0 var(--border);
            }

        .btn-primary {
            background: var(--primary);
            color: white;
            border-color: var(--border);
        }

            .btn-primary:hover {
                background: var(--primary-dark);
                color: white;
            }

        .btn-secondary {
            background: white;
            color: var(--dark);
            border-color: var(--border);
        }

            .btn-secondary:hover {
                background: var(--light);
                color: var(--dark);
            }

        .btn-warning {
            background: var(--accent);
            color: var(--dark);
            border-color: var(--border);
        }

        .btn-danger {
            background: var(--danger);
            color: white;
            border-color: var(--border);
        }

        .btn-info {
            background: var(--secondary);
            color: white;
            border-color: var(--border);
        }

        .btn-success {
            background: var(--success);
            color: white;
            border-color: var(--border);
        }

        .btn-sm {
            padding: 0.5rem 1rem;
            font-size: 0.85rem;
        }

        /* Forms */
        .form-label {
            font-weight: 700;
            text-transform: uppercase;
            font-size: 0.85rem;
            letter-spacing: 0.5px;
            color: var(--dark);
            margin-bottom: 0.5rem;
        }

        .form-control,
        .form-select {
            border: 4px solid var(--border);
            padding: 0.75rem 1rem;
            font-weight: 500;
            background: white;
            transition: all 0.2s ease;
            border-radius: 0 !important;
        }

            .form-control:focus,
            .form-select:focus {
                border-color: var(--primary);
                box-shadow: 4px 4px 0 var(--border);
                outline: none;
                transform: translate(-2px, -2px);
            }

        textarea.form-control {
            resize: vertical;
        }

        .input-group-text {
            background: var(--secondary);
            color: white;
            border: 4px solid var(--border);
            font-weight: 700;
            border-radius: 0 !important;
        }

        /* Tables */
        .table {
            border: 5px solid var(--border);
            background: white;
        }

            .table thead {
                background: var(--secondary);
                color: white;
                border-bottom: 5px solid var(--border);
            }

                .table thead th {
                    font-family: 'Archivo Black', sans-serif;
                    text-transform: uppercase;
                    padding: 1.25rem;
                    font-size: 0.95rem;
                    letter-spacing: 0.5px;
                    border-right: 3px solid var(--border);
                }

                    .table thead th:last-child {
                        border-right: none;
                    }

            .table tbody tr {
                border-bottom: 3px solid var(--border);
                transition: all 0.2s ease;
            }

                .table tbody tr:hover {
                    background: var(--accent);
                    transform: scale(1.01);
                }

            .table tbody td {
                padding: 1rem;
                font-weight: 500;
            }

        /* Badges */
        .badge {
            padding: 0.5rem 1rem;
            border: 3px solid var(--border);
            font-weight: 700;
            text-transform: uppercase;
            font-size: 0.8rem;
            letter-spacing: 0.5px;
            border-radius: 0 !important;
        }

        .bg-primary {
            background: var(--primary) !important;
            color: white;
        }

        .bg-secondary {
            background: var(--secondary) !important;
            color: white;
        }

        .bg-success {
            background: var(--success) !important;
            color: white;
        }

        .bg-danger {
            background: var(--danger) !important;
            color: white;
        }

        .bg-warning {
            background: var(--accent) !important;
            color: var(--dark);
        }

        .bg-info {
            background: var(--secondary) !important;
            color: white;
        }

        /* Alerts */
        .alert {
            border: 4px solid var(--border);
            border-radius: 0 !important;
            font-weight: 600;
            padding: 1.25rem;
            box-shadow: var(--shadow-sm);
        }

        .alert-success {
            background: var(--success);
            color: white;
        }

        .alert-danger {
            background: var(--danger);
            color: white;
        }

        .alert-warning {
            background: var(--accent);
            color: var(--dark);
            border-color: var(--border);
        }

        .alert-info {
            background: var(--secondary);
            color: white;
        }

        .alert i {
            font-size: 1.25rem;
            margin-right: 0.5rem;
        }

        /* Button Groups */
        .btn-group {
            box-shadow: var(--shadow-sm);
        }

            .btn-group .btn {
                box-shadow: none;
                border-right: none;
            }

                .btn-group .btn:last-child {
                    border-right: 4px solid var(--border);
                }

            .btn-group:hover {
                transform: translate(-2px, -2px);
                box-shadow: 6px 6px 0 var(--border);
            }

        /* Footer */
        footer {
            background: var(--dark);
            color: white;
            padding: 2rem 0;
            border-top: 5px solid var(--border);
            margin-top: 4rem;
            text-align: center;
            font-weight: 600;
        }

        /* Animations */
        @@keyframes slideInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .animate-in {
            animation: slideInUp 0.6s cubic-bezier(0.34, 1.56, 0.64, 1);
        }

        /* Utility Classes */
        .text-primary {
            color: var(--primary) !important;
        }

        .text-secondary {
            color: var(--secondary) !important;
        }

        .text-success {
            color: var(--success) !important;
        }

        /* Border utilities */
        .border-danger {
            border-color: var(--danger) !important;
            border-width: 5px !important;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            h1 {
                font-size: 2rem;
            }

            h2 {
                font-size: 1.5rem;
            }

            .card {
                box-shadow: 4px 4px 0 var(--border);
            }

            .btn {
                padding: 0.65rem 1.25rem;
                font-size: 0.85rem;
            }

            .navbar-brand {
                font-size: 1.25rem;
            }
        }

        /* Custom scrollbar */
        ::-webkit-scrollbar {
            width: 12px;
        }

        ::-webkit-scrollbar-track {
            background: var(--light);
            border-left: 3px solid var(--border);
        }

        ::-webkit-scrollbar-thumb {
            background: var(--primary);
            border: 3px solid var(--border);
        }

            ::-webkit-scrollbar-thumb:hover {
                background: var(--primary-dark);
            }


    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg">
            <div class="container">
                <a class="navbar-brand" asp-controller="Expense" asp-action="Index">
                    <i class="bi bi-cash-stack"></i> EXPENSE
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarNav"
                        style="border: 3px solid var(--border); box-shadow: var(--shadow-sm); background: white;">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                    <ul class="navbar-nav align-items-center">

                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Expense" asp-action="Index">
                                    <i class="bi bi-list-ul"></i> Expenses
                                </a>
                            </li>

                            @* Show Admin link only to Admin users *@
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Admin" asp-action="Index">
                                        <i class="bi bi-shield-lock"></i> Admin
                                    </a>
                                </li>
                            }

                            @* Show Manager link only to Manager or Admin users *@
                            @if (User.IsInRole("Manager") || User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Manager" asp-action="Index">
                                        <i class="bi bi-graph-up"></i> Reports
                                    </a>
                                </li>
                            }

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle"></i> @User.Identity?.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown" style="border: 3px solid var(--border); border-radius: 0;">
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post">
                                            <button type="submit" class="dropdown-item" style="font-weight: 600; color: var(--danger);">
                                                <i class="bi bi-box-arrow-right"></i> Logout
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {

                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>


    <main>
        @* Display TempData messages *@
        @if (TempData["Success"] != null)
        {
            <div class="container mt-3">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle-fill"></i>
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="container mt-3">
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle-fill"></i>
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        }

        @RenderBody()
    </main>

    <footer>
        <div class="container">
            <p class="mb-0" style="text-transform: uppercase; letter-spacing: 2px;">
                <i class="bi bi-lightning-charge-fill"></i> EXPENSE TRACKER © 2026 - ITDC
            </p>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        // Add animation to cards on page load
        document.addEventListener('DOMContentLoaded', function() {
            const cards = document.querySelectorAll('.card');
            cards.forEach((card, index) => {
                card.style.animationDelay = `${index * 0.1}s`;
                card.classList.add('animate-in');
            });
        });
    </script>
</body>
</html>
