@{
    ViewData["Title"] = "Access Denied";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">
                        <i class="bi bi-shield-exclamation"></i> Access Denied
                    </h3>
                </div>
                <div class="card-body text-center">
                    <i class="bi bi-lock-fill text-danger" style="font-size: 4rem;"></i>
                    <h4 class="mt-3">You don't have permission to access this page</h4>
                    <p class="text-muted">
                        This page requires specific permissions that your account doesn't have.
                    </p>
                    <div class="mt-4">
                        <a href="@Url.Action("Dashboard", ViewContext.RouteData.Values["controller"].ToString())"
                           class="btn btn-primary">
                            <i class="bi bi-house-door"></i> Go to Dashboard
                        </a>
                        <a href="@Url.Action("Logout", "Account")"
                           class="btn btn-secondary">
                            <i class="bi bi-box-arrow-right"></i> Logout
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
